<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.u1626889.warwickdrama">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_warwickdrama"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_warwickdrama_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Warwick Drama"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SecondActivity"
            android:label="@string/title_activity_second"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreatePostActivity"
            android:label="Create a post"
            android:parentActivityName=".MainActivity">

            <!-- android:theme="@style/AppTheme.NoActionBar"> -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".CreatePost2Activity"></activity>
    </application>

</manifest>